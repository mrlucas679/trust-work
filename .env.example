# TrustWork Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================
# Supabase Configuration (REQUIRED)
# =============================================
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Required for seed script ONLY (admin access - DO NOT EXPOSE in frontend)
# Get from: Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=

# =============================================
# Payment Integration (Feature 4)
# =============================================
# Stripe: Get from https://dashboard.stripe.com/apikeys
# Use test keys for development (pk_test_...)
VITE_STRIPE_PUBLISHABLE_KEY=

# PayPal: Get from https://developer.paypal.com/dashboard/applications
# Use sandbox credentials for development
VITE_PAYPAL_CLIENT_ID=

# =============================================
# Email Notifications (Feature 7)
# =============================================
# Resend: Get API key from https://resend.com/api-keys
VITE_EMAIL_API_KEY=

# Email sender address (must be verified in Resend)
VITE_FROM_EMAIL=noreply@trustwork.com

# Optional: Custom support email for user replies
VITE_SUPPORT_EMAIL=support@trustwork.com

# =============================================
# Admin Dashboard (Feature 8)
# =============================================
# Comma-separated list of admin user emails
# These users will have access to /admin dashboard
VITE_ADMIN_EMAILS=

# =============================================
# Storage Configuration (Feature 6)
# =============================================
# S3-Compatible Storage (Optional - for advanced operations)
VITE_SUPABASE_S3_ENDPOINT=
VITE_SUPABASE_S3_REGION=
VITE_SUPABASE_STORAGE_BUCKET=resumes

# =============================================
# Development Settings
# =============================================
# Development mode (enables debug logging)
VITE_DEV_MODE=true

# API base URL (for backend payment endpoints)
VITE_API_BASE_URL=http://localhost:3000/api

# =============================================
# Optional: Analytics & Monitoring (REQUIRED for production)
# =============================================
# Sentry DSN for error tracking - Get from https://sentry.io/settings/projects/
# Create a project and copy the DSN from: Settings → Client Keys (DSN)
VITE_SENTRY_DSN=

# Enable Sentry in development (optional - for testing)
VITE_SENTRY_ENABLED=false

# App version for release tracking
VITE_APP_VERSION=1.0.0

# Google Analytics measurement ID
# VITE_GA_MEASUREMENT_ID=

# =============================================
# Optional: Feature Flags
# =============================================
# Enable/disable specific features during development
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_MATCHING=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
