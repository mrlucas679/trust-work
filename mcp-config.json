{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "c:\\Users\\Admin\\Documents\\New folder\\trustwork\\trust-work"
      ],
      "description": "Local filesystem access for the TrustWork project"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub repository access (requires GITHUB_TOKEN in environment)"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@executeautomation/mcp-playwright"],
      "description": "Playwright browser automation and testing"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory storage for context across sessions"
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://localhost/trustwork"
      ],
      "description": "PostgreSQL database access (configure connection string as needed)"
    }
  }
}
